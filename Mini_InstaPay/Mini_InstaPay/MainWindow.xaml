<Window x:Class="Mini_InstaPay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Mini_InstaPay.ViewModels"
        Title="Welcome" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        <ContentControl Content="{Binding CurrentView}" />
        <TextBlock Text="Welcome to Mini InstaPay!" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
